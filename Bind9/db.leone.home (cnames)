$TTL    86400
$ORIGIN leone.home.
@       IN      SOA     bind.leone.home. pnleone.outlook.com. (
                         2025090402     ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL

@       IN      NS      bind.leone.home.
bind    IN      A       192.168.1.251

; Wildcard alias: any host under leone.home points to the same name under home.com
*       IN      CNAME   $.home.com.